<Window x:Class="PolyPaint.Vues.HomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PolyPaint.Vues"
        xmlns:VueModels="clr-namespace:PolyPaint.VueModeles"
        mc:Ignorable="d"
        Title="Page d'accueil" Height="700" Width="900" Background="AliceBlue" MinWidth="627" MinHeight="200">
    <Grid>
        <Button x:Name="Login" Height="25" Padding="3" Margin="414,197,400.6,448.4" RenderTransformOrigin="0.33,-11.667" Content="Login" Click="Login_Click"/>
        <Button x:Name="SignUp" Height="25" Width="Auto" Margin="414,252,400.6,393.4" RenderTransformOrigin="2.075,2.992" Content="Sign up"/>
        <DockPanel Margin="0,64,-0.4,320.4">
            <Label FontFamily="Arial" FontSize="40" HorizontalAlignment="Center" Content="Bienvenu à Poly Paint"/>
        </DockPanel>
        <DockPanel Margin="0,350,-0.4,0.4">
            <TextBox DockPanel.Dock="Top" Background="Coral"></TextBox>
            <TextBox DockPanel.Dock="Left">Nouveauté</TextBox>
            <Border BorderThickness="5,5,5,5" BorderBrush="Coral"></Border>
            <TextBox Background="Bisque"></TextBox>
        </DockPanel>
    </Grid>
</Window>
