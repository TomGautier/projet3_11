<UserControl x:Class="PolyPaint.Vues.HomeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PolyPaint.Vues"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
        <DockPanel Margin="0,40,0,40">
            <Label FontFamily="Arial" FontSize="20" HorizontalAlignment="Center" Content="Bienvenu à Poly Paint"/>
        </DockPanel>
        <Button Name="Login" Height="25" Width="60" Margin="10" Content="Login" Command="{Binding NavigateLogin}"/>
        <Button Name="SignUp" Height="25" Width="60" Content="Sign up" Command="{Binding NavigateSignup}"/>
    </StackPanel>
</UserControl>
