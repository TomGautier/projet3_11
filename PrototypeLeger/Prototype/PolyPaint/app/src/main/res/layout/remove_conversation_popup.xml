<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/stroke_bg"
    android:padding="10dp">
    <TextView
        android:id="@+id/removeConversationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/removeConversationTextView"/>
    <Spinner
        android:id="@+id/removeConversationSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/removeConversationTextView"
        android:spinnerMode="dialog"
        android:background="@android:color/white"/>
        <!--android:background="@drawable/chat_entry"-->

    <Button
        android:id="@+id/removeConversationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/conversationButton"
        android:layout_below="@id/removeConversationTextView"
        android:layout_alignParentRight="true" />


</RelativeLayout>
