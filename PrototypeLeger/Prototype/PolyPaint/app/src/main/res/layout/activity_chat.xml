<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:layout_gravity="center"
    tools:context="${relativePackage}.${activityClass}">
    <RelativeLayout
        android:id="@+id/chatMessageZone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/stroke_bg"
        android:layout_margin="20dp">
        <ScrollView
            android:id="@+id/chatScrollView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
        <RelativeLayout
            android:id="@+id/chatEntryLayout"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal"
            android:layout_alignBottom="@+id/chatScrollView">
        <EditText
            android:id="@+id/chatEditText"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginRight="80dp"
            android:inputType="text"
            android:background="@drawable/chat_entry"
            android:gravity="center_vertical" />
            <ImageButton
                android:id="@+id/chatEnterButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginRight="25dp"
                android:src="@drawable/ic_baseline_arrow_forward_24px"
                android:background="@color/chatZone"
                android:scaleX="2"
                android:scaleY="2"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>